---
interface Props {
  title: string;
  price: string;
  features: string[];
}

const { title, price, features } = Astro.props;
---

<div class="bg-white rounded-lg shadow-xl p-6 transform hover:scale-105 transition-transform">
  <h3 class="text-2xl font-bold text-gray-800 mb-4">{title}</h3>
  <p class="text-4xl font-bold text-purple-600 mb-6">{price}</p>
  <ul class="space-y-3">
    {features.map(feature => (
      <li class="flex items-center">
        <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        {feature}
      </li>
    ))}
  </ul>
</div>