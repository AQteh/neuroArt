---
import Layout from '../layouts/Layout.astro';

const featuredArt = [
  {
    title: "Neural Symphony",
    description: "A blend of colors and patterns created by our advanced AI",
    image: "https://images.unsplash.com/photo-1633167606207-d840b5070fc2?w=800&q=80"
  },
  {
    title: "Digital Dreams",
    description: "Where imagination meets artificial intelligence",
    image: "https://images.unsplash.com/photo-1620641788421-7a1c342ea42e?w=800&q=80"
  },
  {
    title: "Future Visions",
    description: "AI-generated artwork pushing creative boundaries",
    image: "https://images.unsplash.com/photo-1634017839464-5c339ebe3cb4?w=800&q=80"
  }
];
---

<Layout title="NeuroArt Studio - AI Art Creation">
  <section class="py-20 px-4 bg-gradient-to-br from-purple-900 to-indigo-900 text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <img 
        src="https://images.unsplash.com/photo-1637858868799-7f26a0640eb6?w=1800&q=80" 
        alt="Background"
        class="w-full h-full object-cover"
      />
    </div>
    <div class="container mx-auto text-center relative z-10">
      <h1 class="text-5xl font-bold mb-6">Transform Your Ideas Into Art</h1>
      <p class="text-xl mb-8">Using cutting-edge AI to create unique, personalized artwork</p>
      <a href="/gallery" class="bg-purple-500 hover:bg-purple-600 px-8 py-3 rounded-full text-lg font-semibold transition-colors inline-block">
        View Gallery
      </a>
    </div>
  </section>

  <section class="py-16 px-4">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">Featured Creations</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredArt.map((art) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden group">
            <div class="h-64 overflow-hidden">
              <img 
                src={art.image} 
                alt={art.title}
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">{art.title}</h3>
              <p class="text-gray-600">{art.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>