---
import Layout from '../layouts/Layout.astro';
import PriceCard from '../components/PriceCard.astro';

const packages = [
  {
    title: "Basic Package",
    price: "$99",
    features: [
      "3 AI-generated artworks",
      "2 revision rounds",
      "Digital delivery",
      "Basic resolution"
    ]
  },
  {
    title: "Premium Package",
    price: "$199",
    features: [
      "5 AI-generated artworks",
      "Unlimited revisions",
      "High-resolution files",
      "Commercial usage rights"
    ]
  }
];
---

<Layout title="Services">
  <div class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-center text-gray-900 mb-12">Our Services</h1>
    <div class="grid md:grid-cols-2 gap-8">
      {packages.map((pkg) => (
        <PriceCard
          title={pkg.title}
          price={pkg.price}
          features={pkg.features}
        />
      ))}
    </div>
  </div>
</Layout>