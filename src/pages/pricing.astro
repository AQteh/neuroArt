---
import Layout from '../layouts/Layout.astro';
import PriceCard from '../components/PriceCard.astro';

const prices = [
  {
    title: "Basic",
    price: "$49",
    features: [
      "5 AI-generated artworks",
      "Standard resolution",
      "Basic customization",
      "Digital delivery"
    ]
  },
  {
    title: "Professional",
    price: "$99",
    features: [
      "15 AI-generated artworks",
      "High resolution",
      "Advanced customization",
      "Priority support",
      "Commercial license"
    ]
  },
  {
    title: "Enterprise",
    price: "$199",
    features: [
      "Unlimited artworks",
      "Ultra-high resolution",
      "Full customization",
      "24/7 support",
      "Commercial license",
      "API access"
    ]
  }
];
---

<Layout title="Pricing - NeuroArt Studio">
  <div class="py-20 px-4">
    <div class="container mx-auto">
      <h1 class="text-4xl font-bold text-center mb-12">Choose Your Plan</h1>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {prices.map(price => (
          <PriceCard {...price} />
        ))}
      </div>
    </div>
  </div>
</Layout>